/**index.wxss**/
page{
  height:100%;
}
.contain {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
} 
.background {
  width: 100%;
  height: 30%;
  position:absolute; 
  background-size:100% 100%;
  z-index: -1;
}
.search{
  height: 7%;
  width: 60%;
  background-color: #ffffff;
  margin: 0 auto;
  margin-top:20vh;
  border-radius: 50px;
  line-height: 40px;
  font-size: 3vh;
  text-align: center;
  box-shadow: 0px 0px 5px 1px #a3d2ff;
}
.haihai{
  position: fixed;
  top: 3%;
  left: 5%;
  z-index: 2;
  width:10vh ;
}
button[plain]{
  border:none;
  padding: 0%;
  display: flex;
}
.view{
  flex-direction: column;
  height: 69%;
}
.selection{
  border-bottom: 6px solid #ddd;
  margin-top: 10px;
}

.slide-image{
width: 100%;
height: 100%;
}
.header{
border-left-width: 2px;
border-left-style: solid;
border-left-color:  rgb(113, 175, 255);
display: flex;
justify-content: space-between;
height: 30px;
padding-left: 10rpx;
padding-right: 10rpx;
margin-top: 10px;
margin-bottom: 10px;
}
.all{
margin-right: 5px;
color: rgb(113, 175, 255);
}
.content{
display: flex;
flex-wrap: wrap;
justify-content: center;
}
.content-item{
width: 45%;
height: 200rpx;
background-color: rgba(147, 196, 253, 0.212);
margin: 5px;
/* 绝对定位的父级必须要定位 */
position: relative;
}
.content-item-title{
position: absolute; /*绝对定位,文字覆盖图片上*/
color: rgb(51, 51, 51);
bottom: 0px; /* 位置在父级元素底部 */
font-size: 14px;
width: 98%;
height: 100rpx; /* 设置容器高度,显示渐变的高度 */
text-align: center;
/* 背景渐变:bottom:从下到上,右0.8向0透明渐变 */
background: -webkit-linear-gradient(bottom,rgba(118, 122, 143, 0.199),rgba(118, 122, 143, 0));
display: flex; /* flex布局,控制容器内文字元素在底部 */
flex-direction: column;
justify-content: flex-end;
padding: 1% 1% 1% 1%;
}

